<mvc:View
	controllerName="royalties.zroyalties.controller.List"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
>
	<semantic:SemanticPage
		id="listPage"
		preserveHeaderStateOnScroll="true"
		toggleHeaderOnTitleClick="false" 
        class="sapUiNoContentPadding"
	>

		<semantic:titleHeading>
			<Title
				id="listPageTitle"
				text="{listView>/title}"
				level="H2"
			/>
		</semantic:titleHeading>
		<semantic:content>

             
                
			<smartTable:SmartTable
				xmlns:smartTable="sap.ui.comp.smarttable"
				xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
				entitySet="ZADOC_ROYALTIES_MONITOR"
				tableType="Table"
				header="{i18n>items}"
				persistencyKey="SmartTableAnalytical_Explored"
				class="sapUiResponsiveContentPadding"
				app:useSmartToggle="true"
				initiallyVisibleFields="Property,Material,MaterialDescription,ApplicationQuantity,CreatedBy,CreatedOn,ChangedBy,ChangedOn,Ticket,Romaaneio,TicketDate,Partner,PartnerId,PartnerDescription,Safra,Plant,EdcNum"
				enableAutoBinding="true"
				showFullScreenButton="true"
				requestAtLeastFields=""
				busyIndicatorDelay="{listView>/delay}"
                
			>
				<Table
					id="list"
					includeItemInSelection="true"
					contextualWidth="auto"
					autoPopinMode="true"
					sticky="ColumnHeaders"
					busyIndicatorDelay="{listView>/delay}"
					noDataText="{listView>/noDataText}"
					mode="SingleSelectMaster"
					growing="true"
					growingScrollToLoad="true" 
                    growingThreshold="30"
					updateFinished=".onUpdateFinished"
					selectionChange=".onSelectionChange"
				/>
			</smartTable:SmartTable>
 
            
		</semantic:content>
        
	</semantic:SemanticPage>
</mvc:View>